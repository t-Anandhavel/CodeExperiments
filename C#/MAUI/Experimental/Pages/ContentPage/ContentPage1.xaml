<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Experimental.Pages.ContentPage1"
             Title="ContentPage1"
             BackgroundColor="LightSkyBlue">
    <VerticalStackLayout>
        <Label Text="Content Page - 1"
               Margin="20" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />

        <Button x:Name="GotoContentPageTwo" Margin="20" Clicked="GotoContentPageTwo_Clicked" Text="Content Page 2" BackgroundColor="PaleVioletRed" TextColor="Black" FontSize="20" FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>