<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Experimental.Pages.CarouselViewPage"
             Title="CarouselViewPage">
    <VerticalStackLayout>
        <CarouselView x:Name="CarouselItems" IndicatorView="Indicator">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="30,55" BackgroundColor="Gray">
                        <Label 
        Text="{Binding Title}" 
        FontSize="18" 
        FontAttributes="Bold"
        HorizontalOptions="Center"
        VerticalOptions="Fill"
    />
                        <Label 
        Text="{Binding Description}" 
        FontSize="14" 
        FontAttributes="Bold"
                            Padding="10,15"
        HorizontalOptions="Center"
        VerticalOptions="Fill"
    />
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView x:Name="Indicator" Margin="5" HorizontalOptions="Center" IndicatorColor="Green" SelectedIndicatorColor="Red" />
    </VerticalStackLayout>
</ContentPage>