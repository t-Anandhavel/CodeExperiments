<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Experimental.Pages.MyFlyoutPage"
             >

    <FlyoutPage.Flyout>
        <ContentPage Title="My APP">
            <VerticalStackLayout>
                <Label Text="This is flyoutpage.flyout" FontSize="15" FontAttributes="Bold" TextColor="Black" />
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="LightSeaGreen">
                    <VerticalStackLayout>
                        <Label Text="this is detail page" HorizontalOptions="Center" Margin="20" />
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>
